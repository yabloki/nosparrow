    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "rebalancer local",
            "cwd": "${workspaceRoot}/coreserver",
            "env": {"NODE_ENV":"localEnv"},
            "program": "${workspaceFolder}/coreserver/lib/rebalancer.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "eventProcessor local",
            "cwd": "${workspaceRoot}/coreserver",
            "program": "${workspaceFolder}/coreserver/lib/ethEventProcessor.js",
            "env": {"NODE_ENV":"localEnv"},
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Attach to Commento",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 86081
        },
    
        {
            "type": "node",
            "request": "attach",
            "name": "attach to dockerized CS",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceRoot}/coreserver/"
        },
        {
            "name": "contract unit tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/ethereumContracts/node_modules/truffle/build/cli.bundled.js",
            "args": ["test"],
            "cwd": "${workspaceRoot}/ethereumContracts",
            "outFiles": [
                "${workspaceRoot}/ethereumContracts/test/**/*"
            ],
        }
    ]
}